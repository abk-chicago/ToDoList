<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreakim.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListofListsActivity"
            android:label="@string/title_activity_listof_lists"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IndividualListActivity"
            android:label="@string/title_activity_individual_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddListItemActivity"
            android:label="@string/title_activity_add_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>